{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pyright file",
            "type": "shell",
            "command": "pyright ${file}"
        },
        {
            "label": "autopep8 file",
            "type": "shell",
            "command": "autopep8 --in-place --aggressive --aggressive ${file}"
        },
        {
            "label": "isort file",
            "type": "shell",
            "command": "isort ${file}"
        },

    ]
}